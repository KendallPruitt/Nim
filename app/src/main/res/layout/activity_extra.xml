<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.cam.nim.Extra">
<!--Screen Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/extraButtonString"
        android:layout_marginTop="@dimen/activity_vertical_margin"/>

    <!-- Spacing -->

    <View
        android:layout_width="0dp"
        android:layout_height="5dp"></View>

    <!-- How to play Button -->

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button"
        android:text="@string/howToPlayButtonString"
        android:padding="5dp"
        android:textColor="#FFFFFF"
        android:layout_centerHorizontal="true"/>

    <!-- Spacing -->

    <View
        android:layout_width="0dp"
        android:layout_height="5dp"></View>
    <!--Scoreboard button-->

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button"
        android:text="@string/scoreboardButtonString"
        android:padding="5dp"
        android:textColor="#FFFFFF"
        android:layout_centerHorizontal="true"/>

    <!-- Spacing -->
    <View
        android:layout_width="0dp"
        android:layout_height="5dp"></View>
    <!--Credits button-->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button"
        android:text="@string/creditsButtonString"
        android:padding="5dp"
        android:textColor="#FFFFFF"
        android:layout_centerHorizontal="true"/>

    <!-- Spacing -->
    <View
        android:layout_width="0dp"
        android:layout_height="5dp"></View>
    <!--Credits button-->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button"
        android:text="@string/backButtonString"
        android:padding="5dp"
        android:textColor="#FFFFFF"
        android:layout_centerHorizontal="true"/>


</LinearLayout>
